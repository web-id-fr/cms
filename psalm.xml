<?xml version="1.0"?>
<psalm
        errorLevel="7"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="src/Modules/*/Tests"/>
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <DuplicateClass>
            <errorLevel type="suppress">
                <file name="src/app/Models/Menu/Menu.php"/>
                <file name="src/app/Repositories/BaseRepository.php"/>
                <file name="src/app/Repositories/Menu/MenuRepository.php"/>
            </errorLevel>
        </DuplicateClass>
        <UndefinedClass>
            <errorLevel type="suppress">
                <file name="src/app/Providers/NovaServiceProvider.php"/>
            </errorLevel>
        </UndefinedClass>
    </issueHandlers>
</psalm>
